{
  "name": "send2claude",
  "displayName": "Send2Claude",
  "publisher": "anghunk",
  "description": "Send selected code to Claude Code chat",
  "icon": "icon.png",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/anghunk/Send2Claude"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:send2claude.sendFromEditor",
    "onCommand:send2claude.sendFromExplorer"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "send2claude.sendFromEditor",
        "title": "Send to Claude Code"
      },
      {
        "command": "send2claude.sendFromExplorer",
        "title": "Send to Claude Code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "send2claude.sendFromEditor",
          "group": "1_modification@10"
        }
      ],
      "explorer/context": [
        {
          "command": "send2claude.sendFromExplorer",
          "group": "1_modification@10"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0"
  }
}